<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3768FA"/>
            <!--<stroke android:width="2dp" android:color="#648db6" android:dashWidth="1dp"/>-->
            <corners android:radius="5dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#3768FA" android:endColor="#3768FA" android:angle="270"/>
            <!--<stroke android:width="2dp" android:color="#648db6" android:dashWidth="1dp"/>-->
            <corners android:radius="5dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>